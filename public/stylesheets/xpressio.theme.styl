// General settings

@import url(http://fonts.googleapis.com/css?family=Lato:100,300,400,700)	

font = Lato
base_font_size = 16px
base_font_weight = 300
heading_font_weight = 300
heading_line_height = 1.2em
site_width = 1024px

paragraph_line_height = 1.5em

paragraph_bottom = 10px
paragraph_right_left = 0

margin_small = 5px
margin_big = 20px

margin_top_small = 20px
margin_top_big = 40px

margin_bottom_small = 20px
margin_bottom_big = 40px

padding_small = 12px
padding_big = 40px

border_radius_small = 5px
border_radius_big = 15px

border_density = 1px
border_style = solid

a_color = none
a_text_decoration = none

a_hover_color = none
a_hover_text_decoration = none

li_padding_top_bottom = 4px
li_padding_right_left = 0px

// Grid

column_width = 100px
gutter_width = 140px
columns = 12 // max 16

total_width = 100% // 100% to fluid grid

// Colors

black = black
blue = blue
green = green
orange = #e2674a
red = red
yellow = yellow
white = white

asparagus = #99CC99
coral = #e2674a
eggplant = #666699
jet = #222222
pink = #CC6699
royalblue = #3399CC
sparkle = #669999
turquoise = #33CCCC
violet = #996699


// More colors, feel free to change

mysauce1 = #D2B48C
mysauce2 = #008080
mysauce3 = #D8BFD8
mysauce4 = #FF6347
mysauce5 = #40E0D0

